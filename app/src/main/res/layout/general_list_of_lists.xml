<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/generalListCardView"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#E3F7FF"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_general_listName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="List name"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_general_listTag"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="List tag"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_general_items"
            app:layout_constraintEnd_toStartOf="@+id/tv_general_items" />

        <TextView
            android:id="@+id/tv_general_items"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="8/10"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>