<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/detailedListCardView"
android:layout_margin="5dp"
app:cardBackgroundColor="#E3F7FF"
app:cardCornerRadius="12dp"
app:cardElevation="3dp"
app:contentPadding="5dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tv_detailed_listName"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:text="List name"
                android:textSize="23sp"
                android:layout_column="1"
                android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_detailed_date"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:text="List date"
                    android:textSize="18sp"
                    android:layout_column="2" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/tv_detailed_listTag"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:text="List tag"
                    android:textSize="18sp"
                    android:layout_column="1" />

                <TextView
                    android:id="@+id/tv_detailed_items"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:text="8/10"
                    android:textSize="18sp"
                    android:layout_column="2" />
            </TableRow>
        </TableLayout>
</androidx.cardview.widget.CardView>