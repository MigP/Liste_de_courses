<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/detailedListCardView"
android:layout_margin="5dp"
app:cardBackgroundColor="#E3F7FF"
app:cardCornerRadius="12dp"
app:cardElevation="3dp"
app:contentPadding="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_detailed_listName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="List name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_detailed_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="List date"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="288dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/tv_detailed_listTag"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="List tag"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_editor_absoluteX="257dp" />

        <TextView
            android:id="@+id/tv_detailed_items"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="64dp"
            android:text="8/10"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>